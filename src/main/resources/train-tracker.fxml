<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<BorderPane prefHeight="1600.0" prefWidth="3000.0" xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.loganrouleau.traintracker.Controller">
    <bottom>
        <HBox alignment="center">
            <padding>
                <Insets bottom="25" left="25" right="25" top="25"/>
            </padding>
            <children>
                <Button fx:id="captureButton" alignment="center" onAction="#onCaptureButton" text="Start Camera"/>
                <Label fx:id="motionLabel" text="Label">
                    <HBox.margin>
                        <Insets left="10.0" right="10.0"/>
                    </HBox.margin>
                </Label>
                <Label fx:id="label" text="Label">
                    <HBox.margin>
                        <Insets right="10.0"/>
                    </HBox.margin>
                </Label>
                <TextField fx:id="x1Text" prefHeight="25.0" prefWidth="70.0" promptText="x1" text="100"/>
                <TextField fx:id="y1Text" prefHeight="25.0" prefWidth="70.0" promptText="y1" text="100"/>
                <TextField fx:id="x2Text" prefHeight="25.0" prefWidth="70.0" promptText="x2" text="1000"/>
                <TextField fx:id="y2Text" prefHeight="25.0" prefWidth="70.0" promptText="y2" text="700"/>
            </children>
        </HBox>
    </bottom>
    <center>
        <ImageView fx:id="imageView" onMouseClicked="#onMouseClicked" onMouseMoved="#onMouseMoved"/>
    </center>
</BorderPane>